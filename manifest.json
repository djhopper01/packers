{
  "name": "Packers.css",
  "version": "0.2.0",
  "manifest_version": 2,
  "description": "A custom user stylesheet which gently alters a webpage to a Green Bay Packers theme.",
  "homepage_url": "https://packers.github.io",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    { "matches": ["https://www.facebook.com/*"], "css": ["src/inject/facebook.css"] },
    { "matches": ["https://github.com/*"],       "css": ["src/inject/github.css"]   },
    { "matches": ["https://www.google.com/*"],   "css": ["src/inject/google.css"]   }
  ]
}
